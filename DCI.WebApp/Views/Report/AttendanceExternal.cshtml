                                        </tr>
                                        <tr>
                                            <th>Clock Out:</th>
                                            <td class="tblClockOut"><label id="lblClockOut"></label></td>
                                        </tr>
                                        <tr>
                                            <th>Late:</th>
                                            <td class="tblLate"><label id="lblLate"></label></td>
                                        </tr>
                                        <tr>
                                            <th>Under Time:</th>
                                            <td class="tblUnderTime"><label id="lblUnderTime"></label></td>
                                        </tr>
                                        <tr>
                                            <th>Overtime:</th>
                                            <td class="tblOT"><label id="lblOT"></label></td>
                                        </tr>
                                        <tr>
                                            <th>Total Hours:</th>
                                            <td class="tblHours"><label id="lblHours"></label></td>
                                        </tr>
                                        <tr>
                                            <th>Total Working Hours:</th>
                                            <th class="tblWorkingHours"><label id="lblWorkingHours"></label></th>
                                        </tr>
                                    </tbody>

                                </table>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal"><small>Close</small></button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>



@section scripts {


                <script src="~/js/dci-validation.js"></script>






                <script type="text/javascript">
                        var js = jQuery.noConflict(true);

                                $('.spinner-overlay').show();

                    setTimeout(() => {
                        $('.spinner-overlay').hide();
                    }, 200);


                        $(document).ready(function () {

                                  // let firstDayOfMonth = new Date();
                                  // firstDayOfMonth.setDate(1);
                                  flatpickr("#minDate", {
                                   dateFormat: "Y-m-d",
                                     defaultDate: (function () {
                                    let d = new Date();
                                    d.setMonth(d.getMonth() - 1);
                                    return d;
                                     })()
                                });

                                  flatpickr("#maxDate", {
                                   dateFormat: "Y-m-d",
                                   defaultDate: new Date()
                                });

                             // Create custom filtering function
                                  let min = null;
                                     let max = null;
                        js.fn.dataTable.ext.search.push(function (settings, data) {
                         min = $('#minDate').val();   // e.g. "2025-09-10"
                         max = $('#maxDate').val();   // e.g. "2025-09-20"
                        let date = (data[2] || '').trim(); // use correct column index! (2 = 3rd col)

                        if (!date) return false;

                        if (min && date < min) return false;
                        if (max && date > max) return false;

                        return true;
                    });

                                        let table = js('#tblDTR').DataTable({
                        dom: '<"d-flex flex-column"<"d-flex justify-content-between align-items-center mb-2"B><"d-flex justify-content-between align-items-center"l<f>>>rtip',
                        buttons: [
                            {
                                extend: 'excel',
                                text: 'Export to Excel',
                                title: 'Attendance Summary Report',
                                exportOptions: {
                                    columns: ':not(:last-child)' // Excludes the last column
                                }
                            },
                            {
                                extend: 'pdfHtml5',   // correct, now wrapped in {}
                                text: 'Export to PDF',
                                title: 'Attendance Summary Report',
                                exportOptions: {
                                    columns: ':not(:last-child)' // Excludes the last column
                                },
                                customize: function (doc) {
                                       doc.watermark = {
                                                                    text: 'Property of DBP Data Center, Inc.',   // watermark text
                                                                    color: 'red',
                                                                    opacity: 0.1,
                                                                    bold: true,
                                                                    italics: false
                                                                };

                                                                doc.content.splice(1, 0,
                                                                    {
                                                                        text: 'Period: ' + min + " to " + max,
                                                                        alignment: 'center',
                                                                        margin: [0, 0, 0, 4], // tighter spacing
                                                                        fontSize: 10,
                                                                        italics: true
                                                                    },
                                                                    {
                                                                        text: 'Prepared by: ' + '@Html.Raw(ViewBag.Fullname)', // dynamic from Razor
                                                                        alignment: 'center',
                                                                        margin: [0, 0, 0, 12],
                                                                        fontSize: 10,
                                                                        bold: true
                                                                    }
                                                                  );

                                    // Footer with Date Printed + Page count
                                    var now = new Date();
                                    var jsDate = now.toLocaleString();

                                    doc['footer'] = function (currentPage, pageCount) {
                                        return {
                                            columns: [
                                                { text: 'Date Printed: ' + jsDate, alignment: 'left', margin: [20, 0] },
                                                { text: 'Page ' + currentPage.toString() + ' of ' + pageCount, alignment: 'right', margin: [0, 0, 20, 0] }
                                            ],
                                            margin: [20, 0]
                                        };
                                    };
                                }
                            }
                        ],
                        lengthMenu: [[10, 25, 50, -1], [10, 25, 50, "All"]],
                        pageLength: 10,
                        order: [[2, 'desc']]
                    });


                        // Event listener for date inputs
                        $('#minDate, #maxDate').on('change', function () {
                            table.draw();
                        });



                        }); //end document Onready



                        function newForm(dtr) {
                           // console.log(dtr)
                                document.getElementById('lblDate').textContent = dtr.date;
                                document.getElementById('lblEmpNo').textContent = dtr.emp;
                                 document.getElementById('lblName').textContent = dtr.name;
                                 document.getElementById('lblSource').textContent = dtr.source;
                                 document.getElementById('lblTimeIn').textContent = dtr.timein;
                                  document.getElementById('lblTimeOut').textContent = dtr.timeout
                                document.getElementById('lblClockOut').textContent = dtr.clockout;
                                document.getElementById('lblLate').textContent = dtr.Late;
                                document.getElementById('lblUnderTime').textContent = dtr.UnderTime;
                                document.getElementById('lblOT').textContent = dtr.OT;
                                document.getElementById('lblHours').textContent = dtr.Hours;
                                document.getElementById('lblWorkingHours').textContent = dtr.WorkingHours;
                                js('#createmodal').modal('show');
                        }


                </script>
}
