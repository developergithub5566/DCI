                                </td>
                                <td>
                                    @item.FIRST_IN
                                </td>
                                <td>
                                    @item.LAST_OUT
                                </td>
                                <td>
                                    @item.LATE
                                </td>
                                <td>
                                    @item.UNDER_TIME
                                </td>
                                <td>
                                    @item.TOTAL_WORKING_HOURS
                                </td>
                                <td>
                                    @item.WORKLOCATION
                                </td>
                                <td>
                                    @if (item.SOURCE == "BIOMETRICS")
                                    {
                                        <span class="btnSuccess applicationStatus">@item.SOURCE</span>
                                    }
                                    else if (item.SOURCE == "REMOTE")
                                    {
                                        <span class="btnPrimary applicationStatus">@item.SOURCE</span>
                                    }
                                    else if (item.SOURCE == "HOLIDAY" || item.SOURCE == "SUSPENSION")
                                    {
                                        <span class="btn-secondary applicationStatus">@item.SOURCE</span>
                                    }
                                    else
                                    {
                                        <span class="btn-secondary applicationStatus">@item.SOURCE | @item.STATUSNAME </span>

                                    }
                                </td>
                           
                                <td class="text-center">
                                    <a href="javascript:void(0)" onclick='newForm({
                                                                date:"@item.DATE.ToString("MM/dd/yyyy")",
                                                                emp:"@item.EMPLOYEE_NO",
                                                                name :"@item.NAME" ,
                                                                    source : "@item.SOURCE @item.RequestNo",
                                                                timein : "@item.FIRST_IN",
                                                                timeout : "@item.LAST_OUT",
                                                                clockout : "@item.CLOCK_OUT",
                                                                Late : "@item.LATE",
                                                                UnderTime : "@item.UNDER_TIME",
                                                                OT : "@item.OVERTIME",
                                                                Hours : "@item.TOTAL_HOURS",
                                                                WorkingHours : "@item.TOTAL_WORKING_HOURS"
                                                                    })' title="View" class="btn btn-primary"><i class="fas fa-search"></i></a>


                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
</<div>
</div>


            <div class="modal fade" id="createmodal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Daily Time Record</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <form id="createForm">
                            <div class="modal-body">
                                <table class="viewDetailsTbl table table-striped">
                                    <tbody>
