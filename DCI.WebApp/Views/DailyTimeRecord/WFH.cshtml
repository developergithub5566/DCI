@section scripts {

                <script src="https://cdn.datatables.net/2.1.2/js/dataTables.js"></script>
                <script src="~/js/dci-validation.js"></script>

     @*            <link href='https://192.168.1.100/DCI-ESS-STG/CSS/TEMPLATE/THEME/bootstrap-datepicker.standalone.min.css' rel='stylesheet'>
                <script src='https://192.168.1.100/DCI-ESS-STG/JS/TEMPLATE/THEME/bootstrap-datepicker.min.js'></script> *@
    

                <script type="text/javascript">
                        var js = jQuery.noConflict(true);

                                $('.spinner-overlay').show();

                    setTimeout(() => {
                        $('.spinner-overlay').hide();
                    }, 200);


                        $(document).ready(function () {
                            js('#tblDTR').DataTable({
                                 order: [[2, 'desc']]
                            });
                            realTime();

                        });


                        function newForm(dtr) {
                           // console.log(dtr)
                                document.getElementById('lblDate').textContent = dtr.date;
                                document.getElementById('lblEmpNo').textContent = dtr.emp;
                                 document.getElementById('lblName').textContent = dtr.name;
                                 document.getElementById('lblSource').textContent = dtr.source;
                                 document.getElementById('lblTimeIn').textContent = dtr.timein;
                                  document.getElementById('lblTimeOut').textContent = dtr.timeout
                                document.getElementById('lblClockOut').textContent = dtr.clockout;
                                document.getElementById('lblLate').textContent = dtr.Late;
                                document.getElementById('lblUnderTime').textContent = dtr.UnderTime;
                                document.getElementById('lblOT').textContent = dtr.OT;
                                document.getElementById('lblHours').textContent = dtr.Hours;
                                document.getElementById('lblWorkingHours').textContent = dtr.WorkingHours;
                                js('#createmodal').modal('show');
                        }


                                            function realTime() {

                    var date = new Date();
                    var hour = date.getHours();
                    var min = date.getMinutes();
                    var sec = date.getSeconds();
                    var halfday = "AM";
                    halfday = (hour >= 12) ? "PM" : "AM";
                    hour = (hour == 0) ? 12 : ((hour > 12) ? (hour - 12): hour);
                    hour = update(hour);
                    min = update(min);
                    sec = update(sec);
                    document.getElementById("h").innerText = hour;
                    document.getElementById("m").innerText = min;
                    document.getElementById("s").innerText = sec;
                    document.getElementById("ap").innerText = halfday;

                    setTimeout(realTime, 1000);
                    }


                    function update(k) {
                    if (k < 10) { return "0" + k; } else { return k; } }


                function submitTimeClock(){
                                var formData = $(this).serialize();
                    var pass = $('#Password').val();//document.getElementById("Password");
                         // var clock = $('#clock').val();
                       // alert(clock)
                                          $.ajax({
                                              type: 'POST',
                                              url: '@Url.Action("WFHTimeIn", "DailyTimeRecord")',
                                                data: { Password: pass },
                                              success: function (response) {
                                                  if (response.success) {
                                                                               $('#createForm')[0].reset();
                                                                   js('#createmodal').modal('hide');

                                                                   Swal.fire({
                                                                       text: response.message,
                                                                       icon: "success",
                                                                       confirmButtonText: "Ok"
                                                                   }).then((result) => {
                                                                       location.reload();
                                                                   });
                                                  } else {
                                                      Swal.fire({
                                                          text: response.message,
                                                          icon: "error"
                                                      });
                                                  }
                                                  $('.spinner-overlay').hide();
                                              },
                                              error: function () {
                                                  $('.spinner-overlay').hide();
                                                  Swal.fire({
                                                      text: "An error occurred. Please try again.",
                                                      icon: "error"
                                                  });
                                              }
                                          });
                }
                </script>
