                <script type="text/javascript">
                            var js = jQuery.noConflict(true);
                                               let fromTime = null;
                        let toTime = null;

                                    $('.spinner-overlay').show();

                        setTimeout(() => {
                            $('.spinner-overlay').hide();
                        }, 200);


                            $(document).ready(function () {
                                js('#tblDTR').DataTable({
