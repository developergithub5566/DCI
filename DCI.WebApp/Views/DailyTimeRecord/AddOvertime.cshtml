                                                             noCalendar: true,
                                                              dateFormat: "H:i",
                                                              onChange: function(selectedDates) {
                                                              fromTime = selectedDates[0];
                                                              calculateDuration();
                                                            }
                                                        });

                                                       flatpickr("#OTTimeTo", {
                                                                 enableTime: true,
                                                         noCalendar: true,
                                                        dateFormat: "H:i",
                                                         onChange: function(selectedDates) {
                                                      toTime = selectedDates[0];
                                                      calculateDuration();
                                                    }
                                                });



                            });



                    function calculateDuration() {
                          if (fromTime && toTime) {
                            // Set both times on the same day
                            const baseDate = new Date();
                            const from = new Date(baseDate);
                            from.setHours(fromTime.getHours(), fromTime.getMinutes(), 0, 0);

                            const to = new Date(baseDate);
                            to.setHours(toTime.getHours(), toTime.getMinutes(), 0, 0);

                            // Handle crossing midnight
                            if (to < from) {
                              to.setDate(to.getDate() + 1);
                            }

                            const diffMs = to - from;
                            const diffMins = Math.floor(diffMs / 60000);
                            const hours = Math.floor(diffMins / 60);
                            const minutes = diffMins % 60;

                            document.getElementById("totalTime").innerText =
                              `Total: ${hours} hour(s) and ${minutes} minute(s)`;
                          }
                        }

                            function newForm(dtr) {
                               // console.log(dtr)

                                  const timefrom = document.querySelector("#OTTimeFrom")._flatpickr;
                                                     timefrom.clear();
                                  const timeto = document.querySelector("#OTTimeTo")._flatpickr;
                                                                     timeto.clear();


                                    js('#createmodal').modal('show');
                            }  
                </script>

                <script>
                    function parseTime(str) {
                      const parts = str.split(':');
                      if (parts.length !== 2) return null;
                      const h = parseInt(parts[0], 10);
                      const m = parseInt(parts[1], 10);
                      if (isNaN(h) || isNaN(m) || h < 0 || h > 23 || m < 0 || m > 59) return null;
                      return { h, m };
                    }

                    function computeDuration(fromStr, toStr) {
                      const from = parseTime(fromStr);
                      const to = parseTime(toStr);
                      if (!from || !to) return null;
                      let fromMinutes = from.h * 60 + from.m;
                      let toMinutes = to.h * 60 + to.m;
                      if (toMinutes < fromMinutes) {
                        toMinutes += 24 * 60;
                      }
                      return toMinutes - fromMinutes; // minutes
                    }

                    function formatMinutes(totalMinutes) {
                      const h = Math.floor(totalMinutes / 60);
                      const m = totalMinutes % 60;
                      return `${h}h ${m}m`;
                    }

                    function updateGrandTotal() {
                      const rows = document.querySelectorAll('#otTable tbody tr');
                      let sumMinutes = 0;
                      rows.forEach(r => {
                        const cell = r.children[4]; // Total Hours column
                        if (!cell) return;
                        const text = cell.textContent.trim(); // e.g., "2h 30m"
                        const match = text.match(/(\d+)h\s*(\d+)m/);
                        if (match) {
                          const h = parseInt(match[1], 10);
                          const m = parseInt(match[2], 10);
                          sumMinutes += h * 60 + m;
                        }
                      });
                      document.getElementById('grandTotalText').innerHTML = `<strong>Grand Total:</strong> ${formatMinutes(sumMinutes)}`;
                    }

                    document.getElementById('addBtn').addEventListener('click', function () {
                          document.querySelectorAll('.error').forEach(e => e.textContent = '');

                          const typeSelect = document.getElementById('leaveTypeSelect');
                          const typeVal = typeSelect.value;
                          const typeText = typeSelect.options[typeSelect.selectedIndex].text.trim();
                          const date = document.getElementById('OTDate').value.trim();
                          const from = document.getElementById('OTTimeFrom').value.trim();
                          const to = document.getElementById('OTTimeTo').value.trim();

                          let hasError = false;
                          if (typeVal === '0') {
                            hasError = true;
                            alert('Please select a Type.');
                          }
                          if (!date) {
                            hasError = true;
                            document.querySelector('label[for="OTDate"]').textContent = 'Required';
                          }
                          if (!from) {
                            hasError = true;
                            document.querySelector('label[for="OTTimeFrom"]').textContent = 'Required';
                          }
                          if (!to) {
                            hasError = true;
                            document.querySelector('label[for="OTTimeTo"]').textContent = 'Required';
                          }
                          if (hasError) return;

                           if (dateAlreadyExists(date)) {
                              alert('An entry for that date already exists. You cannot add a duplicate date.');
                              return;
                            }

                          const durationMinutes = computeDuration(from, to);
                          if (durationMinutes === null) {
                            alert('Time format invalid. Use HH:mm.');
                            return;
                          }

                          document.getElementById('totalTime').textContent = 'Total: ' + formatMinutes(durationMinutes);

                          let entryIndex = 0;
                          const tbody = document.querySelector('#otTable tbody');
                          const tr = document.createElement('tr');

                          tr.innerHTML = `
                            <td>${typeText}</td>
                            <td>${date}</td>
                            <td>${from}</td>
                            <td>${to}</td>
                            <td>${formatMinutes(durationMinutes)}</td>
                           <td hidden class="total-minutes-cell">
                              ${durationMinutes}
                              <input type="hidden" name="Entries[${entryIndex}].TotalMinutes" value="${durationMinutes}">
                           </td>
                            <td><button type="button" class="btn btn-sm btn-danger remove-row">Remove</button></td>
                          `;

                          tbody.appendChild(tr);
                           entryIndex++;
                          updateGrandTotal();
                          js('#createmodal').modal('hide');
                    });

                    // Delegate removal and update grand total
                    document.querySelector('#otTable tbody').addEventListener('click', function (e) {
                      if (e.target.matches('.remove-row')) {
                        const row = e.target.closest('tr');
                        row.remove();
                        updateGrandTotal();
                      }
                    });

                                        function dateAlreadyExists(dateStr) {
                      const rows = document.querySelectorAll('#otTable tbody tr');
                      for (const r of rows) {
                        const existingDate = r.children[1]?.textContent.trim(); // Date column
                        if (existingDate === dateStr) return true;
                      }
                      return false;
                    }

                </script>


