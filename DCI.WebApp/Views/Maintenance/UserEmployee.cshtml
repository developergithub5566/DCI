						</div>
						<form id="createForm">
							<div class="container mt-5">

								<input type="hidden" id="UserId" name="UserId" value="0">
							
								
								<div class="row mb-3">

									<div class="col-md-6">
										<label for="EmployeeId" class="col-form-label required">Employee:</label>
										<input type="hidden" id="EmployeeId" name="EmployeeId" value="0">
										<select id="employeeSelect" class="form-select" required>
											<option value="">Select Employee</option>
										</select>
									</div>

									<div class="col-md-6">
										<label for="RoleId" class="col-form-label required">Role:</label>
										<input type="hidden" id="RoleId" name="RoleId" value="0">
										<select id="roleSelect" class="form-select" required>
											<option value="">Select Role</option>
										</select>
									</div>							
								</div>


						
								<hr />

					

							</div>
							<div class="modal-footer">
								<button type="submit" class="btn btn-primary" id="btnSave">Submit</button>
								<button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
							</div>
						</form>

					</div>
				</div>
			</div>
		</div>

