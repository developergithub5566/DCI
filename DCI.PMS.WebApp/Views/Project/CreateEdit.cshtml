    .project-dates .col-md-4,
    .project-dates .col-md-5 {
        display: flex;
        align-items: center;
    }

        .project-dates .col-md-5 .input-group {
            width: 100%;
        }

    .project-dates button {
        white-space: nowrap;
    }
</style>


