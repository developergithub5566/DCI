        </ul>
    </div>

    <div class="card shadow mb-4">
        <div class="card-header">
            <label class="mb0">Data</label>
        </div>
        <div class="card-body">



            <form id="createForm" asp-controller="Project" asp-action="AddDeliverable" method="post" enctype="multipart/form-data">
                <div class="modal-body">

                    <div class="project-dates">
                        <input type="hidden" id="MileStoneId" name="MileStoneId" value="@Model.MileStoneId">
                        <input type="hidden" id="DeliverableId" name="DeliverableId" value="@Model.Deliverable.DeliverableId">
                        <div id="step1">
                            <div class="row">
                                <label for="inputEmail3" class="col-sm-2 col-form-label">Deliverable Name</label>
                                <div class="col-sm-8">
                                    <input type="text" class="form-control" id="DeliverableName" name="DeliverableName" placeholder="Deliverable Name">
                                </div>
                            </div>
                            <div class="row">
                                <label for="inputEmail3" class="col-sm-2 col-form-label">Status</label>
                                <div class="col-sm-8">
                                   @*  <input type="text" class="form-control" id="Status" name="Status" placeholder="Status"> *@
                                    @Html.DropDownListFor(m => m.Status, new SelectList(Model.StatusList, "StatusId", "StatusName"), "Select", new { @class = "form-control frmField", required = "required", id = "Status" })
                                </div>
                            </div>

                            <div class="row">
                       @*          <label for="inputEmail3" class="col-sm-2 col-form-label">Date Created</label>
                                <div class="col-sm-8">
                                    <input type="text" class="form-control" id="DateCreated" name="DateCreated" placeholder="Date Created">
                                </div> *@
                            </div>
                            <div class="row">

                                <div class="col-sm-8">
                                    <button class="btn btn-primary float-end" onclick="nextStep()">Add to list</button>
                                </div>
                            </div>


                        </div>

                    </div>

                </div>
            </form>
            <div class="table-responsive mt20">
                <table class="table table-bordered" id="tblDTR">
                    <thead>
                        <tr>

                            <th>
                                <label>Deliverable</label>
                            </th>
                            <th>
                                <label>Status </label>
                            </th>
                            <th>
                                <label>Date Created</label>
                            </th>

                            <th class="text-center">
                                <label>Actions</label>
                            </th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model.DeliverableList)
                        {
                            <tr>
                                <td>
                                    @item.DeliverableName
                                </td>
                                <td>
                                    @item.StatusName
                                </td>

                                <td>
                                    @item.DateCreated.ToString("yyyy-MM-dd")
                                </td>

                                <td class="text-center">
                                    <a href="javascript:void(0)" onclick='editForm({
                                                                                            mileStoneId:"@item.MileStoneId",
                                                                                            deliverableId : "@item.DeliverableId",
                                                                                            deliverableName:"@item.DeliverableName",
                                                                                            status:"@item.Status"
                                                                                    })' title="Edit" class="btn btn-primary"><i class="fas fa-edit"></i></a>

                                    <a href="javascript:void(0)" title="Delete" class="btn btn-danger"><i class="fas fa-trash"></i></a>

                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>


        </div>
    </div>
</div>

