<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Task Calendar</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" rel="stylesheet">

    <style>
        body {
            margin: 0;
            font-family: Arial, sans-serif;
            background: #f4f6f8;
        }

        /* Top Bar */
        .top-bar {
            background: #ffffff;
            padding: 12px 20px;
            display: flex;
            align-items: center;
            justify-content: space-between;
            box-shadow: 0 2px 6px rgba(0,0,0,0.08);
            position: sticky;
            top: 0;
            z-index: 100;
        }

        .app-title {
            font-weight: bold;
            font-size: 18px;
            color: #333;
        }

        .actions {
            display: flex;
            gap: 10px;
        }

        .btn {
            border: none;
            padding: 8px 14px;
            border-radius: 20px;
            font-size: 13px;
            cursor: pointer;
            display: flex;
            align-items: center;
            gap: 6px;
            background: #e9ecef;
            color: #333;
        }

        .btn-primary {
            background: #1a73e8;
            color: #fff;
        }

        .btn:hover {
            opacity: 0.9;
        }

        /* Main Layout */
        .container {
            display: flex;
            padding: 20px;
            gap: 20px;
            min-height: calc(100vh - 60px);
        }

        .sidebar {
            flex: 1;
            max-width: 300px;
            background: #fff;
            border-radius: 8px;
            padding: 15px;
            box-shadow: 0 2px 6px rgba(0,0,0,0.08);
            display: flex;
            flex-direction: column;
        }

            .sidebar h4 {
                text-align: center;
                border-bottom: 1px solid #ddd;
                padding-bottom: 10px;
                margin: 0;
                flex-shrink: 0;
            }

        .task-list {
            margin-top: 10px;
            overflow-y: auto;
            flex-grow: 1;
        }

        .task-item {
            background: #f9fafb;
            padding: 10px;
            border-radius: 6px;
            margin-bottom: 10px;
            transition: all 0.2s ease;
            cursor: pointer;
        }

            .task-item:hover {
                background: #e0e7ff;
                transform: translateY(-2px);
            }

        /* Calendar */
        .calendar {
            flex: 3;
            background: #fff;
            border-radius: 8px;
            padding: 15px;
            box-shadow: 0 2px 6px rgba(0,0,0,0.08);
            display: flex;
            flex-direction: column;
        }

            .calendar h4 {
                text-align: center;
                border-bottom: 1px solid #ddd;
                padding-bottom: 10px;
                margin: 0;
            }

        table.calendar-table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 10px;
        }

            table.calendar-table th, table.calendar-table td {
                border: 1px solid #ddd;
                width: 14.28%;
                height: 80px;
                text-align: center;
                vertical-align: top;
                padding: 5px;
            }

            table.calendar-table th {
                background: #f1f1f1;
            }

        td.today {
            background: #e0f7fa;
        }
    </style>
</head>
<body>

    <!-- Top Navigation -->
    <div class="top-bar">
        <div class="app-title">📅 Task Calendar</div>
        <div class="actions">
            <button class="btn btn-primary" onclick="newTask()"><i class="fas fa-plus"></i> New Task</button>
            <button class="btn" onclick="showTracker()"><i class="fas fa-list"></i> Tracker</button>
            <button class="btn" onclick="showCalendar()"><i class="fas fa-calendar"></i> Calendar</button>
        </div>
    </div>

    <!-- Main -->
    <div class="container">

        <!-- Upcoming Tasks Sidebar -->
        <div class="sidebar">
            <h4>Upcoming Tasks</h4>
            <div class="task-list">
                <div class="task-item"><strong>Design Homepage:</strong> Due 02/10</div>
                <div class="task-item"><strong>API Integration:</strong> Due 02/12</div>
                <div class="task-item"><strong>Write Documentation:</strong> Due 02/15</div>
                <div class="task-item"><strong>Test Features:</strong> Due 02/18</div>
                <div class="task-item"><strong>Deploy App:</strong> Due 02/20</div>
                <!-- Add more tasks -->
            </div>
        </div>

        <!-- Calendar -->
        <div class="calendar">
            <h4>February 2026</h4>
            <table class="calendar-table">
                <thead>
                    <tr>
                        <th>Sun</th>
                        <th>Mon</th>
                        <th>Tue</th>
                        <th>Wed</th>
                        <th>Thu</th>
                        <th>Fri</th>
                        <th>Sat</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td></td>
                        <td>1</td>
                        <td>2</td>
                        <td>3</td>
                        <td>4</td>
                        <td>5</td>
                        <td>6</td>
                    </tr>
                    <tr>
                        <td>7</td>
                        <td>8</td>
                        <td>9</td>
                        <td class="today">10</td>
                        <td>11</td>
                        <td>12</td>
                        <td>13</td>
                    </tr>
                    <tr>
                        <td>14</td>
                        <td>15</td>
                        <td>16</td>
                        <td>17</td>
                        <td>18</td>
                        <td>19</td>
                        <td>20</td>
                    </tr>
                    <tr>
                        <td>21</td>
                        <td>22</td>
                        <td>23</td>
                        <td>24</td>
                        <td>25</td>
                        <td>26</td>
                        <td>27</td>
                    </tr>
                    <tr>
                        <td>28</td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                    </tr>
                </tbody>
            </table>
        </div>

    </div>

    <script>
        function newTask(){ alert('Open New Task modal'); }
        function showTracker(){ alert('Open Tracker page'); }
        function showCalendar(){ alert('Already in Calendar view'); }
    </script>

</body>
</html>
