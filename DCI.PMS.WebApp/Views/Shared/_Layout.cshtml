                                    <span class="mr-2 d-inline text-gray-600 small">
                                        @await Html.PartialAsync("_CurrentUser")
                                    </span>
                                    <img src="~/icon/default_male.png" class="profilePicture">
                                </a>

                                <!-- Dropdown - User Information -->
                                <div class="dropdown-menu dropdown-menu-right shadow animated--grow-in" aria-labelledby="userDropdown">

                                    <a asp-controller="Home" asp-action="Profile" class="dropdown-item">
                                        @* // asp-route-id="-1" *@
                                        <i class="fa fa-user-cog fa-sm fa-fw mr-2 text-gray-800"></i>
                                        Profile
                                    </a>
                                    @* 		<a class="dropdown-item" href="http://202.57.47.34/DCI-ESS-STG/account/activity-log/"> *@
                                    <a asp-controller="Maintenance" asp-action="ActivityLog" asp-route-id="-1" class="dropdown-item">
                                        <i class="fas fa-list fa-sm fa-fw mr-2 text-gray-800"></i>
                                        Activity Log
                                    </a>


                                    <a asp-controller="Todo" asp-action="ApprovalLog" class="dropdown-item">
                                        <i class="fas fa-check fa-sm fa-fw mr-2 text-gray-800"></i>
                                        Approval Log
                                    </a>
                                    <div class="dropdown-divider"></div>

                                    <a class="dropdown-item" href="#" data-toggle="modal" data-target="#logoutModal">
                                        <i class="fas fa-sign-out-alt fa-sm fa-fw mr-2 text-gray-800"></i>
                                        Logout
                                    </a>

                                </div>
                            </li>
                        </ul>
                    </nav>

                    <div class="container-fluid">
                
                        <div class="row">
                          
                            <main role="main" class="pb-3">
                                @RenderBody()
                            </main>
                    
                        </div>
                    </div>
                </div>

            </div>
        </div>

        <!-- The Modal -->
        <div class="modal fade" id="logoutModal">
            <div class="modal-dialog">
                <div class="modal-content">
                    <!-- Modal Header -->
                    <div class="modal-header">
                        <h4 class="modal-title">Ready to Leave?</h4>
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                    </div>

                    <!-- Modal body -->
                    <div class="modal-body">
                        <p class="desc">Select <strong>"Logout"</strong> below if you are ready to end your current session.</p>
                    </div>

                    <!-- Modal footer -->
                    <div class="modal-footer">
                        <a asp-controller="Account" asp-action="Logout" class="btn btn-primary">
                            <small>Logout</small>
                        </a>   

                        <button type="button" class="btn btn-secondary" data-dismiss="modal"><small>Cancel</small></button>
                    </div>
                </div>
            </div>
        </div>

    }
