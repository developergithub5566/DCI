                                }
                                @if (module.ModulePageId == (int)EnumModulePage.Undertime)
                                {
                                    <li><a class="dropdown-item" href="/DailyTimeRecord/Undertime">Undertime</a></li>
                                }
                            </ul>
                        </div>

                    }

                    @if (module.ModulePageId == (int)EnumModulePage.LeaveManagement)
                    {
                        <hr class='sidebar-divider'>
                        <a href="/DailyTimeRecord/LeaveManagement" class='mainModule'>
