                                        Notifications
                                    </h6>



                                    @*   No notification available *@
                                    @* START*@
                                    <div class='headerNotifDiv'>
                                        <div id="notification-container"></div>
                                    </div>
                                    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/7.0.5/signalr.min.js"></script>

                                    <script>
                                        const connection = new signalR.HubConnectionBuilder()
                                            .withUrl("/notificationHub")
                                            .configureLogging(signalR.LogLevel.Information) // Add this for detailed logs
                                            .build();

                                        connection.on("ReceiveNotifications", function (notifications) {
                                             const container = document.getElementById("notification-container");
                                                 const countLabel = document.getElementById("notification-count");
                                                 countLabel.innerHTML = notifications.filter(n => !n.markRead).length;
                                            container.innerHTML = ""; // Clear existing

                                                        // <a href="#" onclick="NotifMarkRead(${n.notificationId},'${n.url}')" class="dropdown-item preview-item ${n.markRead ?  ''  : 'bg-body-secondary' }">
                                                           //       <div class="dropdown-divider"></div>

                                                notifications.forEach(n => {
                                                            const item = `
                                                                  <a href="#" onclick="NotifMarkRead(${n.notificationId},'${n.url}')" class="dropdown-item d-flex align-items-center ${n.markRead ?  ''  : 'bg-body-secondary'}">
                                                                        <div class='mr-3'>
                                                                                <div class='icon-circle bg-primary'>
                                                                                    <i class='fa-regular fa-file-lines text-white'></i>
                                                                                </div>
                                                                        </div>
                                                                  <div>
                                                                        <div class='small text-gray-500'>${n.dateNotification}</div>
                                                                                <div class='small'>
                                                                                    <span class="${n.markRead ?  ''  : 'font-weight-bold'}">${n.description}</span>
                                                                                </div>
                                                                        </div>
                                                                  </a>

                                                            `;
                                                            container.innerHTML += item;
                                                        });
                                                    });

                                        connection.start()
                                            .then(function () {
                                                console.log("✅ Connected to SignalR");
                                                connection.invoke("GetNotifications");
                                            })
                                            .catch(function (err) {
                                                console.error("❌ Connection error:", err.toString());
                                            });

                                                             function NotifMarkRead(notificationId,url) {

                                                                    connection.invoke("MarkAsRead", notificationId)
                                                                    .then(() => {

                                                                    })
                                                                    .catch(err => {
                                                                        console.error("❌ SignalR error:", err.toString());
                                                                    });

                                                                            window.location.href = window.location.origin + url;
                                                                               //  location.reload();
                                                              }
                                    </script>



                                    @* END*@

                                    <a class="dropdown-item text-center small text-gray-500" href="/Home/Notification">Show All Notifications</a>
                                </div>
                            </li>


                            <div class="topbar-divider d-none d-sm-block"></div>

                            <!-- Nav Item - User Information -->
                            <li class="nav-item dropdown no-arrow">
