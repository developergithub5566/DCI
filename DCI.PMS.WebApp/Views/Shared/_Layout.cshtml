        var moduleList = JsonConvert.DeserializeObject<List<ModuleInRoleViewModel>>(modulePageAccess ?? "[]") ?? new List<ModuleInRoleViewModel>();

        int iCountModuleDeduction = moduleList.Where(x => x.ModulePageId == (int)EnumModulePage.Late || x.ModulePageId == (int)EnumModulePage.Undertime)
