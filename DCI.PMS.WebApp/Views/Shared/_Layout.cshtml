        "Login",
        "ForgotPassword",
        "VerifyToken",
        "ChangePassword",
        "Upload"
     
        };

        bool isNonAccountAction = !accountActions.Contains(currentAction);
        bool isNonAccountController = !string.Equals(currentController, "Account", StringComparison.OrdinalIgnoreCase);
    }

